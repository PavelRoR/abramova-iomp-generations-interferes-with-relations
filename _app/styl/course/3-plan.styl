#plan
	padding 90px 0
	@media screen and (max-width 560px)
		padding 60px 0
.plan-img
	position absolute
	right 100px
	z-index -1
	bottom 0
	display block
	width 100%
	max-width 399px
	margin 0 auto
	@media screen and (max-width 1199px)
		bottom 80px
		right 0
	@media screen and (max-width 991px)
		position: static
		margin 80px auto 0
	@media screen and (max-width 560px)
		margin 40px auto 0