#main
	padding 0 0 160px
	@media screen and (max-width 1199px)
		padding 0 0 90px
	@media screen and (max-width 560px)
		padding 60px 0
.main
	&-pre
		@media screen and (max-width 560px)
			font-size: 16px
	&-title
		font-family: L
		font-size: 38px
		font-weight: normal
		line-height: 120%
		margin 35px 0
		@media screen and (max-width 560px)
			font-size: 24px
			margin 20px 0
	&-info
		margin 45px 0 35px
		@media screen and (max-width 560px)
			margin 30px 0 20px
		&-text
			display inline-block
			font-family: L
			font-weight: normal
			span
				font-family: SUD
				font-weight: 300
				color #9C9C9C;
				display block
				margin-top: 5px
			&:last-of-type
				margin-left: 88px
				span
					color #C9918F
			@media screen and (max-width 1199px)
				display block
				&:last-of-type
					margin-left: 0
					margin-top: 10px
			@media screen and (max-width 560px)
				font-size: 20px
				&:last-of-type
					margin 20px 0 30px
	&-img
		position absolute
		top -80px
		right -600px
		display block
		width 100%
		max-width 519px
		@media screen and (max-width 1199px)
			right -450px
			top 0
		@media screen and (max-width 991px)
			position: static
			margin: 35px 0
		@media screen and (max-width 560px)
			margin 20px auto
.button-main
	margin-top: 50px
	@media screen and (max-width 991px)
		margin-top: 30px