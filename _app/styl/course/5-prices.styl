#prices
	padding 90px 0
	background-color: #FEE7E6;
	@media screen and (max-width 560px)
		padding 60px 0
.packet
	padding 30px 20px
	background-color #fff
	border-radius: 9px
	width 100%
	max-width 380px
	text-align center
	margin 0 auto 40px
	&-head-title
		font-family: L
		font-size: 28px
		font-weight: normal
		line-height: 120%
		small
			font-family: SUD
			font-size: 17px
			font-weight: 300
			display block
		@media screen and (max-width 560px)
			font-size: 22px
			small
				font-size: 15px
	&-body
		padding 30px 0
.cost
	font-size: 22px
	margin-bottom: 30px
	span
		display block
		font-size: 28px
		margin-top: 5px
	&-full
		span
			text-decoration line-through
			&.unbroken
				text-decoration none
	&-sale
		color red
	&-today
		color limegreen
.timer-title
	font-size: 36px
	font-family: L
	font-weight: normal
	line-height: 120%
	text-align center
	color red
.flip-clock-wrapper
	width: 100%
	max-width 460px
	margin-top: 30px
.flip-clock-divider .flip-clock-label
	color #671659
.flip-clock-dot
	background-color: #671659
.flip-clock-wrapper ul li a div div.inn
	color: #fff
	background-color: #671659
	text-shadow: none
@media screen and (max-width 560px)
	.flip-clock-wrapper
		width 100%
		max-width 260px
		margin-top: 20px
	.flip-clock-wrapper ul
		height 50px
		margin 3px
	.flip-clock-wrapper ul li
		line-height: 50px
	.flip-clock-wrapper ul li a div.up::after
		top 24px
	.flip-clock-wrapper ul li a div div.inn
		font-size: 40px
	.flip-clock-divider
		height 50px
	.flip-clock-dot
		width 7px
		height 7px
		left 3px
	.flip-clock-dot.top
		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px
.prices-img
	display block
	width 100%
	max-width 399px
	margin 100px auto 0
	@media screen and (max-width 991px)
		margin-top: 70px