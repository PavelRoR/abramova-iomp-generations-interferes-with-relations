#video
	padding 150px 0
	@media screen and (max-width 991px)
		padding 90px 0
	@media screen and (max-width 560px)
		padding 60px 0 50px
.video-img
	position absolute
	right 50px
	top 400px
	display block
	width 100%
	max-width 218px
	@media screen and (max-width 991px)
		top 450px
	@media screen and (max-width 560px)
		position: static
		margin 0 auto 50px
.video-wrapper-video
	@media screen and (max-width 991px)
		margin-bottom: 160px
	@media screen and (max-width 560px)
		margin-bottom: 30px
.button-video
	margin-top: 20px
	@media screen and (max-width 560px)
		display none
.general-title-video-desktop
	display block
	@media screen and (max-width 560px)
		display none
.general-title-video-mobile
	display none
	@media screen and (max-width 560px)
		display block