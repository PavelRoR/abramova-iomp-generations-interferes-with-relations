#video
	padding 150px 0 90px
	@media screen and (max-width 991px)
		padding 90px 0 60px
	@media screen and (max-width 560px)
		padding 60px 0 50px
.video-img
	position relative
	padding-top: 100%
	img
		position absolute
		right 50px
		top 50px
		display block
		width 100%
		max-width 218px
	@media screen and (max-width 991px)
		padding-top: 0
		img
			position: static
			margin 60px 0 0
	@media screen and (max-width 380px)
		img
			margin 40px 0 0
.button-video
	margin-top: 20px
	@media screen and (max-width 560px)
		display none