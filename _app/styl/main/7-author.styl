#author
	padding 80px 0
	@media screen and (max-width 560px)
		padding 60px 0
.author-img
	width 100%
	max-width 504px
	margin 0 0 50px auto
	display block
	@media screen and (max-width 991px)
		margin: 60px auto 40px
	@media screen and (max-width 560px)
		margin: 60px auto 25px
.author-title
	text-align right
	font-family: L
	font-size: 40px
	font-weight: normal
	line-height: 120%
	color #C9918F
	@media screen and (max-width 991px)
		text-align center
	@media screen and (max-width 560px)
		font-size: 36px
	@media screen and (max-width 386px)
		font-size: 28px