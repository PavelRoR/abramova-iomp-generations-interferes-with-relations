#author
	padding 80px 0
	@media screen and (max-width 560px)
		padding 60px 0
.author-img
	position relative
	padding-top: 100%
	img
		position absolute
		width auto
		left 0
		right 0
		margin 0 auto
		display block
		top 0
		width 100%
		max-width 576px
	@media screen and (max-width 991px)
		margin-top: 60px
		padding-top: 0
		img
			position: static
.author-title
	position absolute
	text-align center
	font-family: L
	font-size: 40px
	font-weight: normal
	line-height: 120%
	color #FEE7E6
	left 0
	right 0
	bottom 4%
	@media screen and (max-width 1199px)
		font-size: 32px
	@media screen and (max-width 991px)
		bottom 24%
	@media screen and (max-width 560px)
		font-size: 25px
		top auto
		bottom 24%
	@media screen and (max-width 386px)
		font-size: 22px