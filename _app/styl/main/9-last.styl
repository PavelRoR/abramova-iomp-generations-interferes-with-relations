#last
	padding 0 0 90px
	@media screen and (max-width 560px)
		padding 0 0 60px
.last
	&-title
		font-family: L
		font-size: 48px
		font-weight: normal
		line-height: 120%
		@media screen and (max-width 560px)
			font-size: 24px
	&-text
		font-size: 30px
		margin 30px 0 65px
		width 100%
		max-width 500px
		line-height: 140%
		@media screen and (max-width 560px)
			font-size: 17px
			margin 15px 0 25px
	&-img
		position absolute
		display block
		top -30px
		right 100px
		width 100%
		max-width 302px
		@media screen and (max-width 1199px)
			right 50px
			top 0
		@media screen and (max-width 991px)
			position: static
			margin 80px auto 0
.button-last
	@media screen and (max-width 560px)
		display none